import tkinter as tk


root = tk.Tk()
root.title("My Favorite Saying")


root.geometry("400x200")
root.resizable(False, False)  # Prevent resizing the window

saying = '“Great things in business are never done by one person. They\'re done by a team of people.” - Steve Jobs'


label = tk.Label(root, text=saying, font=("Arial", 12), wraplength=350, justify="center")
label.pack(pady=40)


root.mainloop()
